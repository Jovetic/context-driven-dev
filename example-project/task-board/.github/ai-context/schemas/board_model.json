{
  "type": "schema",
  "name": "board_model",
  "description": "Board schema for Kanban board - IMPLEMENTED by AI #2",
  "version": "1.0.0",
  "last_updated": "2025-11-24",
  "status": "implemented",
  "file": "src/models/Board.js",
  "implemented_by": "AI #2",
  
  "schema": {
    "name": {
      "type": "String",
      "required": true,
      "minlength": 3,
      "maxlength": 100,
      "description": "Board name (trimmed)"
    },
    "description": {
      "type": "String",
      "required": false,
      "maxlength": 500,
      "description": "Board description (trimmed)"
    },
    "owner": {
      "type": "String",
      "required": true,
      "description": "Board owner identifier"
    },
    "createdAt": {
      "type": "Date",
      "auto": true,
      "description": "Mongoose timestamp"
    },
    "updatedAt": {
      "type": "Date",
      "auto": true,
      "description": "Mongoose timestamp"
    }
  },
  
  "virtuals": {
    "columns": {
      "description": "Virtual populate for columns relationship",
      "ref": "Column",
      "localField": "_id",
      "foreignField": "boardId"
    }
  },
  
  "indexes": [
    {"fields": ["owner"], "purpose": "Efficient queries by owner"}
  ],
  
  "toJSON": "Virtuals included (columns array)",
  
  "api_endpoints": [
    "POST /api/boards - Create board",
    "GET /api/boards - List boards",
    "GET /api/boards/:id - Get board (with columns populated)",
    "PUT /api/boards/:id - Update board",
    "DELETE /api/boards/:id - Delete board (cascades to columns and tasks)"
  ]
}
