{
  "type": "schema",
  "name": "column_model",
  "description": "Column schema for Kanban board - IMPLEMENTED by AI #2",
  "version": "1.0.0",
  "last_updated": "2025-11-24",
  "status": "implemented",
  "file": "src/models/Column.js",
  "implemented_by": "AI #2",
  
  "schema": {
    "name": {
      "type": "String",
      "required": true,
      "minlength": 2,
      "maxlength": 50,
      "description": "Column name (trimmed)"
    },
    "boardId": {
      "type": "ObjectId",
      "ref": "Board",
      "required": true,
      "description": "Parent board reference"
    },
    "position": {
      "type": "Number",
      "default": 0,
      "description": "Order within board (auto-incremented)"
    },
    "createdAt": {
      "type": "Date",
      "auto": true,
      "description": "Mongoose timestamp"
    },
    "updatedAt": {
      "type": "Date",
      "auto": true,
      "description": "Mongoose timestamp"
    }
  },
  
  "indexes": [
    {"fields": ["boardId", "position"], "purpose": "Sort columns within boards"}
  ],
  
  "hooks": {
    "pre_save": "Auto-increments position for new columns in a board"
  },
  
  "api_endpoints": [
    "POST /api/columns - Create column",
    "GET /api/columns?boardId=... - List columns for board",
    "PUT /api/columns/:id - Update column",
    "DELETE /api/columns/:id - Delete column",
    "PATCH /api/columns/:id/position - Update position (reorder)"
  ]
}
